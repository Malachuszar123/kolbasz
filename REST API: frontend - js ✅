const apiURL = "http://localhost/api2/index.php?ugyfel";

document.addEventListener("DOMContentLoaded", () =>{
    const ugyfelekCards = document.querySelector("#ugyfelek");
    async function getAllUgyfel(){
        let result = await fetch(apiURL);
        let ugyfelek = await result.json();
        console.log(ugyfelek);
        showCards(ugyfelek);
    };
    function showCards(adatok){
        ugyfelekCards.innerHTML="";
        let cards = "";
        adatok.forEach(element => {
            cards += `
            <div class="card col-lg-2 col-md-3 col-sm-12 m-3">
            <div class="card-body">
                <h4 class="card-title">${element.nev}</h4>
                <p class="card-text">${element.szuldatum}.</p>
            </div>
            </div>`; //altgr + 7 = ``
        });
        ugyfelekCards.innerHTML = cards;
    };
    getAllUgyfel();
});


