using System;
using MySql.Data.MySqlClient;

namespace vizsgara
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string connString = "server=localhost; user=root; database=dolgozok; password=;";

            using (MySqlConnection databaseconn = new MySqlConnection(connString))
            {
                try
                {
                    databaseconn.Open();

                    // 1. feladat
                    MySqlCommand dolgozokSzama = new MySqlCommand("SELECT COUNT(dolgozok.nev) AS osszesdolgozo FROM dolgozok", databaseconn);
                    Console.WriteLine("1. feladat: Dolgoz√≥k sz√°ma √∂sszesen?");
                    Console.WriteLine($"{dolgozokSzama.ExecuteScalar()}");

                    // 2. feladat
                    MySqlCommand magaskeresetuNev = new MySqlCommand("SELECT dolgozok.nev FROM dolgozok ORDER BY dolgozok.ber DESC LIMIT 1;", databaseconn);
                    Console.WriteLine("\n2. feladat: Legmagasabb kereset≈± dolgoz√≥ neve?");
                    Console.WriteLine($"{magaskeresetuNev.ExecuteScalar()}");

                    // 3. feladat
                    MySqlCommand reszlegekDolgozoi = new MySqlCommand("SELECT dolgozok.reszleg, COUNT(dolgozok.nev) AS fo FROM dolgozok GROUP BY dolgozok.reszleg", databaseconn);
                    Console.WriteLine("\n3. feladat: H√°nyan dolgoznak az egyes r√©szlegeken?");
                    using (var execut = reszlegekDolgozoi.ExecuteReader())
                    {
                        while (execut.Read())
                        {
                            Console.WriteLine($"{execut.GetString(0)}: {execut.GetInt32(1)} f≈ë"); //1 oszlop de tobb sor, muszaj
                        }
                    }

                    // 4. feladat
                    MySqlCommand asztalosmuhelyDolgozok = new MySqlCommand("SELECT dolgozok.nev FROM dolgozok WHERE dolgozok.reszleg = 'asztalosm≈±hely'", databaseconn);
                    Console.WriteLine("\n4. feladat: Asztalosm≈±hely-ben dolgoz√≥k nevei?");
                    using (var execut = asztalosmuhelyDolgozok.ExecuteReader())
                    {
                        while (execut.Read())
                        {
                            Console.WriteLine($"{execut.GetString(0)}");
                        }
                    }
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"Hiba t√∂rt√©nt: {ex.Message}");
                }
            }

            Console.ReadLine();
        }
    }
}
