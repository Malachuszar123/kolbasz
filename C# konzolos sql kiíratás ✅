using MySql.Data.MySqlClient;

namespace probamegintetcsekeee
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string connString = "server=localhost; user=root; database=pizza; password=;";
            MySqlConnection databaseconn = new MySqlConnection(connString);

            try
            {
                databaseconn.Open();

                // 1. feladat: Hány db pizza van összesen?
                MySqlCommand lekerdezes1 = new MySqlCommand("SELECT COUNT(pnev) FROM pizza", databaseconn);
                Console.WriteLine("1. feladat: Hány db pizza van összesen?");
                Console.WriteLine($"{lekerdezes1.ExecuteScalar()}");

                // 2. feladat: Pizzák neve és árai?
                MySqlCommand lekerdezes2 = new MySqlCommand("SELECT pnev, par FROM pizza", databaseconn);
                Console.WriteLine("\n2. feladat: Pizzák neve és árai?");
                using (var olvaso = lekerdezes2.ExecuteReader())
                {
                    while (olvaso.Read())
                    {
                        Console.WriteLine($"{olvaso.GetString(0)}: {olvaso.GetInt32(1)} Ft");//getstring: szavak; getint32: számok oszlopai
                    }
                }

                // 3. feladat: Hány db pizzát rendelt Kuka 2023-ban?
                MySqlCommand lekerdezes3 = new MySqlCommand(
                    "SELECT COUNT(rendeles.idopont) FROM rendeles " +
                    "INNER JOIN vevo ON rendeles.vazon = vevo.vazon " +
                    "WHERE vevo.vnev = 'Kuka' AND rendeles.idopont BETWEEN '2023-01-01' AND '2023-12-31'", databaseconn);
                Console.WriteLine("\n3. feladat: Hány db pizzát rendelt Kuka 2023-ban?");
                Console.WriteLine($"{lekerdezes3.ExecuteScalar()}");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Hiba történt: {ex.Message}");
            }

            Console.ReadLine();
        }
    }
}
