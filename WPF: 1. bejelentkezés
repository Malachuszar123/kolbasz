            }
        }
    }
    catch (Exception ex)
    {
        MessageBox.Show("Hiba tÃ¶rtÃ©nt az adatbÃ¡zis kapcsolÃ³dÃ¡sakor: " + ex.Message);
    }
    finally
    {
        if (connection.State == ConnectionState.Open)
            connection.Close();
    }
}

