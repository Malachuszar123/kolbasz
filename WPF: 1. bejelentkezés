private void bej_Click(object sender, RoutedEventArgs e)
{
    string felhasznalonev = felh.Text;
    string jelszo = jel.Password;

    // AdatbÃ¡zis kapcsolat beÃ¡llÃ­tÃ¡sa
    string connectionString = "Server=localhost; Database=vannevesjelszo; Uid=root; Pwd=;"; //ha 1x hivatkozol a tetejÃ©n ezt tÃ¶rÃ¶lheted
    MySqlConnection connection = new MySqlConnection(connectionString);                     //ezt is

    try
    {
        connection.Open();

        // EllenÅ‘rizzÃ¼k, hogy a megadott felhasznÃ¡lÃ³nÃ©v Ã©s jelszÃ³ szerepel-e az adatbÃ¡zisban
        string query = "SELECT * FROM felhasznalok WHERE nev=@felh AND jelszo=@jel"; //ugy nevezd el a @ utÃ¡n mint ami az oszlop neve
        MySqlCommand command = new MySqlCommand(query, connection);
        command.Parameters.AddWithValue("@felh", felhasznalonev);  //oszlop neve Ã©s hogy az mi
        command.Parameters.AddWithValue("@jel", jelszo);

        using (MySqlDataReader reader = command.ExecuteReader())
        {
            if (reader.Read())
            {
                MessageBox.Show("Sikeres bejelentkezÃ©s!");
                //var regWindow = new Program();
                //regWindow.Show();
                Close();
            }
            else
            {
