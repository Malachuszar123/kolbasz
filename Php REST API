index.php : M√ÅSODIK

<?php
/*
 *  GET http://localhost/API/index.php?pizza -> visszaadja az √∂sszes pizza √∂sszes adat√°t
 *  POST http://localhost/API/index.php?pizza -> hozz√°ad egy √∫j pizz√°t
 *  DELETE http://localhost/API/index.php?pizza/{azon} -> t√∂r√∂l egy pizz√°t
 */
header("Content-type: application/json; charset=utf-8");
//$_SERVER["REQUEST_METHOD"]
$keresSzoveg = $_SERVER[ "QUERY_STRING"];
$keresek = explode('/', $keresSzoveg); 
switch ($keresek[0]) {
    case "":
        require_once './pizza.php';
        break;

    default:
        http_response_code(404);
        break;
}
?>

