<?php 
// Adatb√°zis kapcsolat be√°ll√≠t√°sa
$conn = mysqli_connect("localhost", "felhasznalonev", "jelszo", "test");

// SQL lek√©rdez√©s
$sql = "SELECT * FROM levesek";
